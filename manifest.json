{
    "manifest_version": 2,

    "name": "Fleex for chrome",
    "description": "Learn English surfing the web",
    "version": "1.0",

    "permissions": [
        "tabs",
        "cookies",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png"
        },
        "default_title": "Fleex this page"
    },
    "background": {
        "scripts": ["scripts/jquery-1.8.3.js", "scripts/fleex-tab.js", "scripts/background.js"],
        "persistent": false 
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}