{
    "manifest_version": 2,

    "name": "Fleex extension for Google Chromeâ„¢",
    "short_name": "Fleex extension",
    "description": "Learn English surfing the web",
    "version": "1.0.6",

    "permissions": [
        "tabs",
        "webNavigation",
        "cookies",
        "http://*/",
        "https://*/"
    ],
    "icons": { 
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "img/icon19.png",
            "38": "img/icon38.png"
        },
        "default_title": "Fleex this page"
    },
    "background": {
        "scripts": ["scripts/jquery-1.8.3.js", "scripts/google-analytics.js", "scripts/fleex-tab.js", "scripts/background.js"],
        "persistent": false 
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/ExtMessagePasser.js", "scripts/ExtensionTracker.js"]
        }
    ],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com chrome-extension://gbblinkjgdfpfijckdifhdiijmcpjebj/scripts/analytics.js; object-src 'self'"
}